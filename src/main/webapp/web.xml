<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Tamaras Servlet Training Project</display-name>

    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>LogFilter</filter-class>

        <init-param>
            <param-name>test-param</param-name>
            <param-value>Initialization Parameter</param-value>
        </init-param>
    </filter>

<!--    filter-mapping is the block where the order matters-->
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <servlet-name>AllFormValues</servlet-name>
<!--        <dispatcher>REQUEST</dispatcher>-->
    </filter-mapping>


<!--    <session-config>-->
<!--        <session-timeout>15</session-timeout>-->
<!--    </session-config>  -->
<!--    ^^ is this the right place for this block...?-->

    <servlet>
        <servlet-name>simpleServlet</servlet-name>
        <servlet-class>initialTestingJunkCode.HelloWorld</servlet-class>
<!--        <load-on-startup>1</load-on-startup>-->
<!--        ^^ you can have more numbers; Tomcat will go through all the 1s first, then all the 2s etc-->
<!--        ^^ no mapping required when "load-on-startup" -> cannot be loaded through the ui-->
    </servlet>
    <servlet>
        <servlet-name>servletWithForm</servlet-name>
        <servlet-class>initialTestingJunkCode.HelloForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkboxesServlet</servlet-name>
        <servlet-class>initialTestingJunkCode.Checkboxes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>allFormData</servlet-name>
        <servlet-class>AllFormValues</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>simpleServlet</servlet-name>
        <url-pattern>/initialTestingJunkCode.HelloWorld</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletWithForm</servlet-name>
        <url-pattern>/initialTestingJunkCode.HelloForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkboxesServlet</servlet-name>
        <url-pattern>/initialTestingJunkCode.Checkboxes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>allFormData</servlet-name>
        <url-pattern>/AllFormValues</url-pattern>
    </servlet-mapping>
</web-app>